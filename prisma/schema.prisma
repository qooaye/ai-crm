generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  tags      String[]
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  emails    EmailLog[]
}

model EmailLog {
  id        String   @id @default(cuid())
  subject   String
  body      String
  sentAt    DateTime @default(now())
  contact   Contact  @relation(fields: [contactId], references: [id])
  contactId String
}
